<Window x:Class="Rotate_Transform_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rotate_Transform_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Background="Yellow" Height="25" Width="100">One</Button>
            <Button Background="Yellow" Height="25" Width="100">
                <Button.LayoutTransform>
                    <RotateTransform Angle="6"/>
                </Button.LayoutTransform>
                Two
            </Button>
            <Button Background="Yellow" Height="25" Width="100">Three</Button>
        </StackPanel>
        
    </Grid>
</Window>
