<Window x:Class="Scale_Transform_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scale_Transform_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<StackPanel Width="75">
			<Button Background="Orange">No scaling</Button>
			<Button Background="BurlyWood">
				<Button.RenderTransform>
					<ScaleTransform ScaleX="2" />
				</Button.RenderTransform>
				Scale 2
			</Button>
			<Button Background="Orange">
				<Button.RenderTransform>
					<ScaleTransform ScaleX="1.5" ScaleY="3" />
				</Button.RenderTransform>
				Scale 1.5 x 3
			</Button>
		</StackPanel>
    </Grid>
</Window>
