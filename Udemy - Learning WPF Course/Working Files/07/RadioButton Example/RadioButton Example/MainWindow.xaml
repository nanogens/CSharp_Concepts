<Window x:Class="RadioButton_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButton_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="30">
            <RadioButton x:Name="rb1" GroupName="A" Checked="rb1_Checked" Unchecked="rb1_Unchecked" >Option 1</RadioButton>
            <RadioButton x:Name="rb2" GroupName="A" Checked="rb2_Checked" Unchecked="rb2_Unchecked" >Option 2</RadioButton>
            <RadioButton x:Name="rb3" GroupName="A" Checked="rb3_Checked" Unchecked="rb3_Unchecked" >Option 3</RadioButton>

            
            <Label x:Name="label2" Content="Label" />
        </StackPanel>
     

        
    </Grid>
</Window>
