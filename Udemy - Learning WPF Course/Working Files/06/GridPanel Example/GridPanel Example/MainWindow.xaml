<Window x:Class="GridPanel_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridPanel_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="446.923" Width="794.231">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="142*"/>
            <RowDefinition Height="109*"/>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="Gray" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" />
        <Label Grid.Row="1" Grid.Column="1" Content="Hello!" Background="White" Margin="30" Grid.ColumnSpan="2"/>

    </Grid>
