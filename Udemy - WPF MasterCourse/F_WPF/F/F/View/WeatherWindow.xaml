<Window x:Class="F.View.WeatherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F.View"
        mc:Ignorable="d"
        Title="WeatherWindow" Height="325.8" Width="300">
    <Grid>
        <StackPanel Margin="10">
        <TextBox />
        <TextBlock Text="Paris"
                   Margin="0 20 0 0"
                   FontSize="20"
                   FontWeight="Bold"/>
        <TextBlock Text="21 Deg"
                   Margin="0 30 0 0"
                   FontSize="40"
                   FontWeight="ExtraBold"/>
        <TextBlock Text="Sunny"
                   FontSize="15"
                   FontWeight="DemiBold"/>
        <TextBlock Text="UV 7"
                   Margin="0 50 0 0"/>
        <TextBlock Text="Prec 65%"/>
        <TextBlock Text="NE 9 Kmph"/>
        </StackPanel>
    </Grid>
</Window>
