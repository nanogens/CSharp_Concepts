<UserControl x:Class="G.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:G.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel Margin="20">
        <TextBlock x:Name="titleTextBlock"
                   Text="Note title"
                   FontSize="15"
                   FontWeight="Bold"
                   Margin="5"                   
                   Foreground="White"/>
        <TextBlock x:Name="editedTextBlock"
                   Text="19 minutes"
                   FontSize="12"
                   Margin="5 0 5 5"
                   Foreground="DodgerBlue"/>
        <TextBlock x:Name="contentTextBlock"
                   Text="Placeholder for content of nodes.  This line should wrap around"
                   FontSize="12"
                   Foreground="DarkGray"
                   Margin="10 0 10 10"
                   TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
